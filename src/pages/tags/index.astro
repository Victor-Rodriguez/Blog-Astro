---
import Layout from "../../layouts/Layout.astro";
const allPosts = await Astro.glob("../posts/*.md");

const tags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())];
---

<Layout pageTitle="Índice de etiquetas">
  <div class="tags-list">
    {
      tags.map((tag) => (
        <p class="tag">
          <a href={`/tags/${tag}`}>{tag}</a>
        </p>
      ))
    }
  </div>
</Layout>

<style>
  a {
    color: #4c1d95;
  }

  .tags-list {
    display: flex;
    flex-wrap: wrap;
    padding: 0;
    margin: 0;
  }

  .tag {
    background-color: #e0e0e0;
    border-radius: 12px;
    padding: 0.5rem 1rem;
    margin: 0.5rem;
    font-size: 0.875rem;
    color: #333;
  }
</style>
