---
const { url, title, pubDate, tags } = Astro.props;
---

<ul>
  <li class="post-list-item">
    <a class="post-title" href=`${url}`>{title}</a>
    <p class="post-date">{pubDate.toString().slice(0, 10)}</p>
    <ul class="tags-list">
      {tags.map((tag: string) => <li class="tag">{tag}</li>)}
    </ul>
  </li>
</ul>

<style>
  .post-list-item {
    margin-bottom: 2rem;
    list-style: none;
    padding: 1rem;
    border: 1px solid #ddd;
    border-radius: 8px;
    background-color: #f9f9f9;
  }

  .post-title {
    font-size: 1.1rem;
    color: #4c1d95;
    text-decoration: none;
    font-weight: bold;
    margin-bottom: 0.5rem;
    display: block;
  }

  .post-title:hover {
    color: #2c0d65;
  }

  .post-date {
    font-size: 0.875rem;
    color: #666;
    margin-bottom: 1rem;
  }

  .tags-list {
    display: flex;
    flex-wrap: wrap;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .tag {
    background-color: #e0e0e0;
    border-radius: 12px;
    padding: 0.5rem 1rem;
    margin: 0.5rem;
    font-size: 0.875rem;
    color: #333;
  }
</style>
